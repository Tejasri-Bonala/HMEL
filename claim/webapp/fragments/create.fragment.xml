<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        id="create"
        showHeader="false"
    >
        <buttons>
            <Button
                id="hellosave"
                text="Save"
                press=".onSavecreate"
                class ="add"
            />
            <Button
                id="hellocancel"
                text="Cancel"
                press=".onClosecreate"
                 class ="add"
            />
        </buttons>
        <f:Form
            id="Form"
            editable="true"
            class="returnFormClass"
        >
            <f:layout>
                <f:ResponsiveGridLayout
                    breakpointXL="1000"
                    labelSpanXL="1"
                    labelSpanL="1"
                    labelSpanM="1"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="5"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="true"
                />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement>
                            <f:fields>
                                <VBox class="spacingAfter">
                                    <Label
                                        text="Folder Name"
                                        class="label"
                                    />
                                    <Input
                                        id="folder"
                                        width="400px"
                                    />
                                </VBox>
                                </f:fields>  
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </Dialog>
</core:FragmentDefinition>
